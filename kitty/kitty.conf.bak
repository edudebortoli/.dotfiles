# Set the color scheme
#include nord.conf  # Assuming you have the Nord color scheme config installed

# Disable window decorations
# Kitty doesn't have a direct option for window decorations, but you can set padding to 0
#window_padding_width = 0

# Font settings
# Uncomment the appropriate line for the font you want to use
# font_family Liberation Mono
# font_family DaddyTimeMono Nerd Font
# font_family EnvyCodeR Nerd Font
# font_family Nimbus Mono PS
font_family BlexMono Nerd Font

# Font size
font_size 10.0

# Hide mouse cursor when typing
hide_mouse_cursor_when_typing yes

# Disable the tab bar
tab_bar_edge none

# Set window background opacity
background_opacity 0.8


# BEGIN_KITTY_THEME
# Nord
#include current-theme.conf
include ./kitty-themes/themes/zenburn.conf
# END_KITTY_THEME
